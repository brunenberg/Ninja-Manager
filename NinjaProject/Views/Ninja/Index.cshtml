@model IEnumerable<NinjaApplication.Models.Ninja>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="asp-button">Create New</a>
</p>
<table class="table table-style">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gold)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="custom-font-size">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td class="custom-font-size">
                @Html.DisplayFor(modelItem => item.Gold)
            </td>
            <td>
                <a asp-action="Inventory" asp-route-id="@item.Id" class="asp-button">Inventory</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="asp-button">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="asp-button">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="asp-button red">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
